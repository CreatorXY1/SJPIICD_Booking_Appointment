<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2E"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp"
            android:elevation="8dp">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Appointment"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#00000066"
                android:shadowRadius="2"
                android:shadowDx="0"
                android:shadowDy="2"/>

            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a date and time to go to the cashier"
                android:textSize="14sp"
                android:textColor="#E1BEE7"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Form Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Welcome Banner moved here (shows logged in user) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWelcomeBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient">

                    <TextView
                        android:id="@+id/tvWelcomeBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome, Student"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select a date and time you will go to the cashier to pay."
                        android:textSize="13sp"
                        android:textColor="#E0E0E0"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Date Selection Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="#6A1B9A">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnPickDate"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Choose Date"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="#E1BEE7"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Time Window Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="#7B1FA2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Time Window"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp"/>

                    <Spinner
                        android:id="@+id/spinnerWindows"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@android:drawable/editbox_background"
                        android:padding="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Confirm Button -->
            <Button
                android:id="@+id/btnConfirmBooking"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Confirm Booking"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                app:cornerRadius="32dp"
                android:elevation="6dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
