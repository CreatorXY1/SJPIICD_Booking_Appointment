<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvECTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My e-Clearance"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/btnPrelim"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:text="Prelim"/>

        <Button
            android:id="@+id/btnMidterm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:text="Midterm"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnFinal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:text="Final"/>
    </LinearLayout>

    <!-- Status lines -->
    <TextView
        android:id="@+id/tvPrelimStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Cleared"
        android:padding="12dp"
        android:visibility="visible"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvMidtermStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Cleared"
        android:padding="12dp"
        android:visibility="gone"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvFinalStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Cleared"
        android:padding="12dp"
        android:visibility="gone"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/progressBarEC"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvECError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D32F2F"
        android:visibility="gone"
        android:padding="12dp"/>

    <ScrollView
        android:id="@+id/scrollEC"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/containerECAll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Prelim layout -->
            <LinearLayout
                android:id="@+id/layoutPrelim"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <!-- Midterm layout -->
            <LinearLayout
                android:id="@+id/layoutMidterm"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!-- Final layout -->
            <LinearLayout
                android:id="@+id/layoutFinal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <Button
            android:id="@+id/btnRefreshEC"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Refresh"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"/>

    </LinearLayout>

</LinearLayout>
