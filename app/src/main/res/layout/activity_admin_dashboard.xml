<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2E">

    <!-- Header -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:elevation="8dp">

        <!-- Header Content with Sign Out Button -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Dashboard"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#00000066"
                    android:shadowRadius="2"
                    android:shadowDx="0"
                    android:shadowDy="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your system"
                    android:textSize="14sp"
                    android:textColor="#E1BEE7"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Sign Out Button - Right aligned -->
            <Button
                android:id="@+id/btnAdminSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#FF5252"
                android:textColor="#FFFFFF"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:minHeight="40dp"
                app:cornerRadius="20dp"
                android:elevation="4dp"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Manage Clearances Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="#6A1B9A">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Manage Clearances"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update student clearance status"
                        android:textSize="14sp"
                        android:textColor="#E1BEE7"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnManageClearance"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Manage Clearances"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#9C27B0"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- View Appointments Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="#7B1FA2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… View Appointments"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review all student appointments"
                        android:textSize="14sp"
                        android:textColor="#E1BEE7"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnViewAppointments"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="View Appointments"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#9C27B0"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>