<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2E">

    <!-- Header -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Student"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#00000066"
            android:shadowRadius="2"
            android:shadowDx="0"
            android:shadowDy="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to do today?"
            android:textSize="14sp"
            android:textColor="#E1BEE7"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Menu Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Book Appointment Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="#6A1B9A">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸ“…"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:background="#9C27B0"
                        android:elevation="2dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book Appointment"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedule a new appointment"
                            android:textSize="14sp"
                            android:textColor="#E1BEE7"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="40sp"
                        android:textColor="#E1BEE7"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Appointments Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMyAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="#7B1FA2">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="ðŸ“‹"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:background="#9C27B0"
                        android:elevation="2dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Appointments"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View and manage your bookings"
                            android:textSize="14sp"
                            android:textColor="#E1BEE7"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="40sp"
                        android:textColor="#E1BEE7"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- E-Clearance Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEclearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="#8E24AA">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="âœ“"
                        android:textSize="36sp"
                        android:gravity="center"
                        android:background="#9C27B0"
                        android:textColor="#FFFFFF"
                        android:elevation="2dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-Clearance"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check clearance status"
                            android:textSize="14sp"
                            android:textColor="#E1BEE7"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="40sp"
                        android:textColor="#E1BEE7"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Daily Capacity Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDailyCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#424242">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="#9C27B0">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ“Š"
                        android:textSize="28sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Capacity"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check how many students already booked per day"
                            android:textSize="14sp"
                            android:textColor="#E1BEE7"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="32sp"
                        android:textColor="#E1BEE7"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sign Out Button -->
            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Sign Out"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#E1BEE7"
                app:strokeColor="#9C27B0"
                app:strokeWidth="2dp"
                app:cornerRadius="28dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>