<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#3C3C3E"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Student Clearance"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Prelim Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#424242">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#6A1B9A">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prelim - Requirements"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbPrelimAccounting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accounting Office"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#E1BEE7"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Midterm Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#424242">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#7B1FA2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Midterm - Requirements"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbMidtermAccounting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accounting Office"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#E1BEE7"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Final Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#424242">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#8E24AA">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final - Requirements"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <!-- Final list -->
                <CheckBox android:id="@+id/cbFinalAccounting" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Accounting Office" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalAdmission" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Admission Office" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalAVP" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="AVP-ACAD" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalCampusMin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Campus Ministry" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalComExt" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Community Extension" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalCompLab" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Computer Laboratory" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalDigLab" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Digital Laboratory" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalGuidance" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Guidance Office" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalLibrary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Library" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalOSA" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Office of Student Affairs" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalProgramHeads" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Program Heads" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalPropCust" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Property Custodian" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalQMO" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Quality Management Office" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalScholarship" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Scholarship" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalSciLab" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Science Laboratory" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
                <CheckBox android:id="@+id/cbFinalSSC" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Supreme Student Council" android:textColor="#FFFFFF" android:buttonTint="#E1BEE7"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>