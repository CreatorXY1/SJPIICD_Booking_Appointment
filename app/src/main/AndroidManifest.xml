<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_sjpiicdaa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sjpiicdaa_round"
        android:supportsRtl="true"
        android:name=".MyApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.SJPIICDApp">

        <activity android:name=".MyAppointmentsActivity" />

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Keep other activities declared -->
        <activity android:name=".LoginActivity" android:exported="false"/>
        <activity android:name=".DashboardActivity" android:exported="false"/>
        <activity android:name=".BookingActivity"/>
        <activity android:name=".MainActivity" android:exported="false"/>
        <activity android:name=".AppointmentCapacityActivity" android:exported="false"/>
        <activity android:name=".EClearanceActivity" android:exported="false"/>
        <activity android:name=".AdminManageClearanceActivity" android:exported="false"/>
        <activity android:name=".AdminDashboardActivity" android:exported="false"/>
        <activity android:name=".AuthChoiceActivity" android:exported="false"/>
        <activity android:name=".AuthLoginActivity" android:exported="false"/>
        <activity android:name=".AuthRegisterActivity" android:exported="false"/>
        <activity android:name=".HomeActivity" android:exported="false"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>